Description=my-web-pet
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/var/www/abotkin.space/my-web-pet

ExecStart=/bin/bash -c 'source /var/www/abotkin.space/my-web-pet/venv/bin/activate && gunicorn -w 4 -b 0.0.0.0:8000 wsgi:app'

Restart=always
RestartSec=5
Environment="PATH=/usr/bin:/bin:/var/www/abotkin.space/my-web-pet/venv/bin"

[Install]
WantedBy=multi-user.target
